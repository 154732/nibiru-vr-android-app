<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:layout_width="800dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gray_border"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="90项症状自评量表（SCL-90）"
            android:textAppearance="@style/text_black_blod_30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEEEE"
                android:paddingLeft="10dip"
                android:text="测试结果"
                android:textAppearance="@style/text_black_blod_20sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_detail_result"
                android:textAppearance="@style/text_black_blod_15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEEEE"
                android:paddingLeft="10dip"
                android:text="评语"
                android:textAppearance="@style/text_black_blod_20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_detail_comment"
                android:textAppearance="@style/text_black_blod_15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEEEE"
                android:paddingLeft="10dip"
                android:text="建议"
                android:textAppearance="@style/text_black_blod_20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_detail_suggest"
                android:textAppearance="@style/text_black_blod_15sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>