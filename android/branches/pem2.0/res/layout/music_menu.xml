    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="30dp"
         >
    	<Button 
    	    android:id="@+id/music_menu_button_circle"
