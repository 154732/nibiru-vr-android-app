    	    android:layout_height="fill_parent"
    	    android:background="@drawable/music_menu_button"
    	    />
    	 <TextView 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="@string/music_menu_startwithplaying"
    	    android:textColor="@color/black"
    	    android:textSize="15sp"
    	    android:layout_alignTop="@+id/music_menu_button_circle"
    	    android:layout_alignLeft="@+id/music_menu_button_circle"
    	    android:layout_alignBottom="@+id/music_menu_button_circle"
    	    android:layout_marginLeft="15dp"
    	    android:gravity="center_vertical"
    	    />
    	
    	<CheckBox 
    	    android:id="@+id/music_menu_checkbox_startwithplaying"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignTop="@+id/music_menu_button_circle"
    	    android:layout_alignRight="@+id/music_menu_button_circle"
    	    android:layout_alignBottom="@+id/music_menu_button_circle"
    	    android:layout_marginRight="10dp"
    	    android:button="@drawable/checkbox_bg"
    	    /> 
